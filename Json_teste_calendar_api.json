  "item": [
    {
      "name": "Criar Evento",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Reunião com cliente\",\n  \"date\": \"2025-09-25\",\n  \"time\": \"14:30:00\",\n  \"client\": \"João da Silva\",\n  \"type\": \"Reunião\",\n  \"reminderMinutes\": 30,\n  \"notes\": \"Discutir contrato anual\",\n  \"email\": \"cliente@exemplo.com\"\n}"        },
        "url": {"raw": "http://localhost:5000/api/events", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","events"]}
      }
    },
    {
      "name": "Listar Eventos",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:5000/api/events?email=cliente@exemplo.com", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","events"], "query": [{"key":"email","value":"cliente@exemplo.com"}]}
      }
    },
    {
      "name": "Atualizar Evento",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode":"raw","raw": "{\n  \"title\": \"Reunião Atualizada\",\n  \"date\": \"2025-09-26\",\n  \"time\": \"15:00:00\",\n  \"client\": \"João da Silva\",\n  \"type\": \"Reunião\",\n  \"reminderMinutes\": 30,\n  \"notes\": \"Alteração de horário\",\n  \"email\": \"cliente@exemplo.com\"\n}"},
        "url": {"raw": "http://localhost:5000/api/events/1", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","events","1"]}
      }
    },
    {
      "name": "Excluir Evento",
      "request": {
        "method": "DELETE",
        "url": {"raw": "http://localhost:5000/api/events/1", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","events","1"]}
      }
    },
    {
      "name": "Exportar Eventos",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:5000/api/events/export?email=cliente@exemplo.com", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","events","export"], "query": [{"key":"email","value":"cliente@exemplo.com"}]}
      }
    },
    {
      "name": "Importar Eventos",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode":"raw","raw": "{\n  \"data\": [\n    {\n      \"Titulo\": \"Evento importado\",\n      \"Data\": \"2025-09-26\",\n      \"Hora\": \"10:00:00\",\n      \"Cliente\": \"Maria\",\n      \"Tipo\": \"Treinamento\",\n      \"Lembrete\": \"15\",\n      \"Notas\": \"Treinamento de equipe\",\n      \"email\": \"cliente@exemplo.com\"\n    }\n  ]\n}"},
        "url": {"raw": "http://localhost:5000/api/events/import", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","events","import"]}
      }
    }
  ]
